#!/usr/bin/env bash
# ~/.macos — trimmed and modernized (2026)
# This file has been reorganized: deprecated/removed options pruned,
# problematic commands guarded. Legacy/optional defaults are commented out
# at the bottom for reference.

source "$HOME/.system-config/lib/colours.sh"

setting "Configuring system"
echo;

# Close any open System Settings / Preferences panes
osascript -e 'tell application "System Settings" to quit' 2>/dev/null || \
  osascript -e 'tell application "System Preferences" to quit' 2>/dev/null || true

###############################################################################
# General UI / UX                                                            #
###############################################################################

setting "Set sidebar icon size to medium"
defaults write NSGlobalDomain NSTableViewDefaultSizeMode -int 1

setting "Always show scrollbars"
defaults write NSGlobalDomain AppleShowScrollBars -string "WhenScrolling"

setting "Disable automatic capitalization, smart dashes, smart quotes, auto-correct"
defaults write NSGlobalDomain NSAutomaticCapitalizationEnabled -bool false
defaults write NSGlobalDomain NSAutomaticDashSubstitutionEnabled -bool false
defaults write NSGlobalDomain NSAutomaticQuoteSubstitutionEnabled -bool false
defaults write NSGlobalDomain NSAutomaticSpellingCorrectionEnabled -bool false

setting "Increase window resize speed for Cocoa applications"
defaults write NSGlobalDomain NSWindowResizeTime -float 0.001

setting "Disable Resume system-wide"
defaults write NSGlobalDomain NSQuitAlwaysKeepsWindows -bool false

setting "Disable the 'reopen windows when logging back in' option"
defaults write com.apple.loginwindow TALLogoutSavesState -bool false
defaults write com.apple.loginwindow LoginwindowLaunchesRelaunchApps -bool false

###############################################################################
# Keyboard, Trackpad, and Input                                              #
###############################################################################

setting "Disable press-and-hold for keys in favor of key repeat"
defaults write NSGlobalDomain ApplePressAndHoldEnabled -bool false

setting "Set a blazingly fast keyboard repeat rate"
defaults write NSGlobalDomain KeyRepeat -int 1
defaults write NSGlobalDomain InitialKeyRepeat -int 13

setting "Enable tap-to-click for this user"
defaults write com.apple.driver.AppleBluetoothMultitouch.trackpad Clicking -bool true
defaults -currentHost write NSGlobalDomain com.apple.mouse.tapBehavior -int 1
defaults write NSGlobalDomain com.apple.mouse.tapBehavior -int 1

###############################################################################
# Screen & Screenshots                                                       #
###############################################################################

setting "Save screenshots to the desktop (PNG) and remove shadow"
defaults write com.apple.screencapture location -string "${HOME}/Desktop"
defaults write com.apple.screencapture type -string "png"
defaults write com.apple.screencapture disable-shadow -bool true

###############################################################################
# Finder                                                                      #
###############################################################################

setting "Show all filename extensions"
defaults write NSGlobalDomain AppleShowAllExtensions -bool true

setting "Display full POSIX path as Finder window title"
defaults write com.apple.finder _FXShowPosixPathInTitle -bool true

setting "Show the ~/Library folder"
chflags nohidden ~/Library || true

setting "Finder: prefer list view and hide extra files"
defaults write com.apple.finder AppleShowAllFiles -bool false
defaults write com.apple.finder FXPreferredViewStyle -string "Nlsv"

setting "Allow text selection in Quick Look"
defaults write com.apple.finder QLEnableTextSelection -bool true

setting "Disable disk image verification"
defaults write com.apple.frameworks.diskimages skip-verify -bool true
defaults write com.apple.frameworks.diskimages skip-verify-locked -bool true
defaults write com.apple.frameworks.diskimages skip-verify-remote -bool true

###############################################################################
# Dock                                                                       #
###############################################################################

setting "Make Dock icons of hidden applications translucent"
defaults write com.apple.dock showhidden -bool false

setting "Make Dock autohide by default"
defaults write com.apple.dock autohide -bool false
defaults write com.apple.dock tilesize -int 36

setting "Add a spacer to the left side of the Dock (where the applications are)"
defaults write com.apple.dock persistent-apps -array-add '{tile-data={}; tile-type="spacer-tile";}'

setting "Add a spacer to the right side of the Dock (where the Trash is)"
defaults write com.apple.dock persistent-others -array-add '{tile-data={}; tile-type="spacer-tile";}'

# Guarded reset Launchpad database: avoid errors when Dock folder missing
if [ -d "${HOME}/Library/Application Support/Dock" ]; then
  find "${HOME}/Library/Application Support/Dock" -name "*-*.db" -maxdepth 1 -delete 2>/dev/null || true
fi

###############################################################################
# Safari & WebKit                                                             #
###############################################################################

setting "Enable Develop menu and Web Inspector in Safari"
defaults write com.apple.Safari IncludeDevelopMenu -bool true
defaults write com.apple.Safari WebKitDeveloperExtrasEnabledPreferenceKey -bool true

###############################################################################
# Terminal / iTerm2                                                           #
###############################################################################

setting "Only use UTF-8 in Terminal.app"
defaults write com.apple.terminal StringEncodings -array 4

setting "iTerm2: load preferences from dotfiles"
defaults write com.googlecode.iterm2 PrefsCustomFolder -string "$HOME/.system-config/preferences"
defaults write com.googlecode.iterm2 LoadPrefsFromCustomFolder -bool true

###############################################################################
# Time Machine & Backups                                                      #
###############################################################################

setting "Prevent Time Machine from prompting to use new hard drives"
defaults write com.apple.TimeMachine DoNotOfferNewDisksForBackup -bool true

###############################################################################
# Applications                                                                #
###############################################################################

# Transmission
defaults write org.m0k.transmission UseIncompleteDownloadFolder -bool true
defaults write org.m0k.transmission IncompleteDownloadFolder -string "${HOME}/Downloads/Torrents"

# setting "Enable the debug menu in Address Book"
# defaults write com.apple.addressbook ABShowDebugMenu -bool true

setting "Enable the debug menu in iCal"
defaults write com.apple.iCal IncludeDebugMenu -bool true

###############################################################################
# Kill affected applications to apply certain prefs                        #
###############################################################################

for app in "Activity Monitor" "Dock" "Finder" "Mail" "Messages" "Safari" "SystemUIServer" "Terminal"; do
  killall "${app}" &> /dev/null || true
done

echo; warn "Some of these changes require a logout/restart to take effect.";


